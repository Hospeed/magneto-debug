<?xml version="1.0"?>

<config>
    <sections>
        <sheep_debug translate="label" module="sheep_debug">
            <label>Developer Debug Toolbar</label>
            <tab>advanced</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <options translate="label">
                    <label>Options</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enable>
                            <label>Enable Debug Toolbar</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Display Debug Toolbar if set to Yes and client's ip is whitelisted in 
                                System / Configuration / Developer / Developer Client Restrictions - Allowed IPS.]]>
                            </comment>
                        </enable>
                        <persist>
                            <label>Persist Request Information</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Allows to view information about previous requests.</comment>
                        </persist>

                        <persist_expiration> 
                            <label>Persisted Request Lifetime (number of days)</label> 
                            <comment>Number of days after which persisted requests are cleared. Requests are not delete if configuration is set to 0.</comment> 
                            <depends>
                                <persist>1</persist>
                            </depends>
                            <frontend_type>text</frontend_type> 
                            <validate>validate-not-negative-number</validate>
                            <sort_order>20</sort_order> 
                             <show_in_default>1</show_in_default> 
                            <show_in_website>0</show_in_website>
                             <show_in_store>0</show_in_store> 
                        </persist_expiration>
                        <force_varien_profile>
                            <label>Enable Varien Profile Dynamically</label>
                            <comment>Starts Varien Profile if is disabled in index.php. In order to capture all events, we recommend to enable Varien Profile manually by editing index.php.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </force_varien_profile>
                    </fields>
                </options>

                <panels>
                    <label>Panels Visibility</label>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <controller_visibility>
                            <label>Show Controller Panel</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>1</sort_order>
                        </controller_visibility>

                        <models_visibility>
                            <label>Show Models Panel</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>2</sort_order>
                        </models_visibility>

                        <design_visibility>
                            <label>Show Design Panel</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>3</sort_order>
                        </design_visibility>

                        <blocks_visibility>
                            <label>Show Blocks Panel</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>4</sort_order>
                        </blocks_visibility>

                        <logging_visibility>
                            <label>Show Logging Panel</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>5</sort_order>
                        </logging_visibility>

                        <util_visibility>
                            <label>Show Utils Panel</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>6</sort_order>
                        </util_visibility>

                        <modules_visibility>
                            <label>Show Modules Panel</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>7</sort_order>
                        </modules_visibility>

                        <config_visibility>
                            <label>Show Configuration Panel</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>8</sort_order>
                        </config_visibility>
                    </fields>
                </panels>
            </groups>
        </sheep_debug>
    </sections>
</config>

