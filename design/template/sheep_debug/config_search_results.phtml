<?php
/** @var Sheep_Debug_Block_Array $this */
$results = $this->getArray();
?>

<table>
    <thead>
    <tr>
        <th><?php echo $this->__('#') ?></th>
        <th><?php echo $this->__('Configuration Path') ?></th>
        <th><?php echo $this->__('Value') ?></th>
    </tr>
    </thead>

    <tbody>
    <div id="config-search-results">
        <?php if (count($results)): ?>
            <?php $row = 0 ?>
            <?php foreach ($results as $key => $value): ?>
                <tr class="<?php echo $row % 2 ? 'djDebugOdd' : 'djDebugEven' ?>">
                    <td><?php echo $row ?></td>
                    <td><?php echo $this->escapeHtml($key) ?></td>
                    <td><?php echo $this->escapeHtml($value) ?></td>
                </tr>
                <?php $row++ ?>
            <?php endforeach; ?>
        <?php else: ?>
            <tr>
                <td colspan="3"><?php echo $this->__('Configurations not found for this query.') ?></td>
            </tr>
        <?php endif; ?>
    </div>
    </tbody>
</table>
